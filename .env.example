# PostgreSQL / pgvector
POSTGRES_DB=skebobia
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Simulation
TICK_INTERVAL_SEC=1.0
RELATIONS_INTERVAL_TICKS=5
SIM_COMMUNICATION_RANGE=3.2
SIM_PERSONAL_SPACE=3

# LLM decider
LLM_DECIDER_ENABLED=0
LLM_DECIDER_BASE_URL=https://bothub.chat/api/v2/openai/v1
LLM_DECIDER_MODEL=
LLM_DECIDER_API_KEY=
LLM_DECIDER_DEBUG=0
LLM_DECIDER_TIMEOUT_SEC=45
LLM_DECIDER_MAX_RETRIES=0
LLM_DECIDER_MAX_OUTPUT_TOKENS=1200
LLM_DECIDER_MAX_AGENTS_PER_TICK=16
LLM_DECIDER_STRICT_JSON_SCHEMA=0
LLM_DECIDER_JSON_SCHEMA_PARSE_RETRIES=1
LLM_DECIDER_STRICT_SCHEMA_VALIDATION=0

# Long-term memory (pgvector)
MEMORY_ENABLED=1
MEMORY_TABLE_NAME=agent_memories
MEMORY_PROMPT_LIMIT=3
MEMORY_KEY_LIMIT=5
MEMORY_VECTOR_DIM=1536

# Embeddings for memory
MEMORY_EMBEDDING_MODE=openai
MEMORY_EMBEDDING_MODEL=text-embedding-3-small
MEMORY_EMBEDDING_BASE_URL=https://api.openai.com/v1
MEMORY_EMBEDDING_API_KEY=
MEMORY_EMBEDDING_TIMEOUT_SEC=20
MEMORY_EMBEDDING_HASH_FALLBACK=1
